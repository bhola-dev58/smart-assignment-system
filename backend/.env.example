# Server Configuration
PORT=5000

# MongoDB Configuration
# Replace with your MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/smart-assignment
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/smart-assignment
MONGO_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/?appName=smart

# JWT Secret Key
# Generate a strong random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_key_change_this_in_production

# Frontend URL (for CORS in production)
# FRONTEND_URL=http://localhost:5173
